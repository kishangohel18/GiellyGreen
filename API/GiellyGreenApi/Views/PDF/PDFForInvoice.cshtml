@model GiellyGreenApi.Models.CombineSupplierInvoice
@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="http://fonts.cdnfonts.com/css/dax" rel="stylesheet">
    <style>
        body {
            font-family: 'Dax';
            font-size: 20px;
        }

        .PaddingTop {
            height: 32px;
        }

        .AddBorder {
            border: 1px solid black;
        }

        .footer {
            margin-top: 200px;
        }
    </style>
</head>
<body>
    @{
        string strDate = "";
        if (Model.Month_Header.InvoiceDate != null)
        {
            var ArrayDate = Model.Month_Header.InvoiceDate.ToString().Split('-');
            string getDay = ArrayDate[0];
            strDate = String.Format("{0}/{1}/{2}", getDay, Model.Month_Header.InvoiceMonth.ToString(), Model.Month_Header.InvoiceYear.ToString());
        }

        string path = HttpContext.Current.Server.MapPath("~/ImageStorage");

        if (!Directory.Exists(path))
        {
            Directory.CreateDirectory(path);
        }
    }
    <div class="container">
        <table width="100%">
            <tr>
                <td width="40%">
                    @if (@Model.Supplier.LogoUrl != null)
                    {
                        string imgPath = Path.Combine(path, Model.Supplier.LogoUrl);
                        byte[] imageByte = File.ReadAllBytes(imgPath);
                        Model.Supplier.LogoUrl = Convert.ToBase64String(imageByte);

                        <div><img src='data:image/jpg;base64,@Model.Supplier.LogoUrl' style="width:200px; height: 100px;" /></div>
                    }
                </td>
                <td width="60%" class="text-right"><div class="text-right h1">Self Billed Invoice</div></td>
            </tr>
            <tr>
                <td> <p> @Model.Supplier.SupplierName </p> <p>@Model.Supplier.BusinessAddress</p> </td>
                <td>
                    <div>
                        <div class="text-right h4">
                            Invoice Date :  @strDate
                        </div>
                        <div class="text-right h4">
                            Invoice Ref :  @Model.Supplier.SupplierReference _ @Model.Month_Header.InvoiceReferance
                        </div>
                        <br />
                        @if (Model.Supplier.TaxReference != null)
                        {
                    <div class="text-right h4">Tax Ref :  @Model.Supplier.TaxReference</div>
                        }
                        @if (Model.Supplier.VatNumber != null)
                        {
                            <div class="text-right h4">VAT Number :  @Model.Supplier.VatNumber</div>
                        }
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="text-left">
                        <p>
                            Block-C 601, Ganesh Meridian, Nr. New
                            Gujarat High Court, S. G. Highway,
                            Ahmedabad 380060, Gujarat, India.
                        </p>
                    </div>
                </td>
                <td></td>
            </tr>
        </table>
        <br />

        <table width="100%">
            <thead>
                <tr class="AddBorder PaddingTop">
                    <th width="60%" style="text-align: center;">Description</th>
                    <th width="20%"></th>
                    <th width="20%" style="text-align: right;">Amount(GBP)&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr class="AddBorder PaddingTop">
                    <td class="AddBorder">&nbsp; Hair Services</td>
                    <td class="AddBorder"></td>
                    <td style="text-align:right;" class="AddBorder">@Model.Invoice.BeautyService&nbsp; </td>
                </tr>
                <tr class="AddBorder PaddingTop">
                    <td class="AddBorder">&nbsp; Beauty Services</td>
                    <td class="AddBorder"></td>
                    <td style="text-align:right;" class="AddBorder">@Model.Invoice.BeautyService&nbsp; </td>
                </tr>

                @if (Model.Invoice.Custom1 != null && Model.Invoice.Custom1 != 0)
                {
                    <tr class="AddBorder PaddingTop">
                        <td class="AddBorder">&nbsp; @Model.Month_Header.Custom1</td>
                        <td class="AddBorder"></td>
                        <td style="text-align:right;" class="AddBorder">@Model.Invoice.Custom1&nbsp; </td>
                    </tr>
                }
                @if (Model.Invoice.Custom2 != null && Model.Invoice.Custom2 != 0)
                {
                    <tr class="AddBorder PaddingTop">
                        <td class="AddBorder">&nbsp; @Model.Month_Header.Custom2</td>
                        <td class="AddBorder"></td>
                        <td style="text-align:right;" class="AddBorder">@Model.Invoice.Custom2&nbsp; </td>
                    </tr>
                }
                @if (Model.Invoice.Custom3 != null && Model.Invoice.Custom3 != 0)
                {
                    <tr class="AddBorder PaddingTop">
                        <td class="AddBorder">&nbsp; @Model.Month_Header.Custom3</td>
                        <td class="AddBorder"></td>
                        <td style="text-align:right;" class="AddBorder">@Model.Invoice.Custom3&nbsp; </td>
                    </tr>
                }
                @if (Model.Invoice.Custom4 != null && Model.Invoice.Custom4 != 0)
                {
                    <tr class="AddBorder PaddingTop">
                        <td class="AddBorder">&nbsp; @Model.Month_Header.Custom4</td>
                        <td class="AddBorder"></td>
                        <td style="text-align:right;" class="AddBorder">@Model.Invoice.Custom4&nbsp; </td>
                    </tr>
                }
                @if (Model.Invoice.Custom5 != null && Model.Invoice.Custom5 != 0)
                {
                    <tr class="AddBorder PaddingTop">
                        <td class="AddBorder">&nbsp; @Model.Month_Header.Custom5</td>
                        <td class="AddBorder"></td>
                        <td style="text-align:right;" class="AddBorder">@Model.Invoice.Custom5&nbsp; </td>
                    </tr>
                }
                <tr class="text-right PaddingTop">
                    <td></td>
                    <td>Subtotal (Net)&nbsp; </td>
                    <td style="text-align:right;" class="AddBorder">@Convert.ToDecimal(Model.Invoice.Net).ToString("N2")&nbsp; </td>
                </tr>
                <tr class="text-right PaddingTop">
                    <td></td>
                    <td>Vat&nbsp; </td>
                    <td style="text-align:right;" class="AddBorder">@Convert.ToDecimal(Model.Invoice.Vat).ToString("N2")&nbsp; </td>
                </tr>
                <tr class="text-right PaddingTop">
                    <td></td>
                    <td>Advance paid&nbsp; </td>
                    <td style="text-align:right;" class="AddBorder">@Convert.ToDecimal(Model.Invoice.AdvancePaid).ToString("N2")&nbsp; </td>
                </tr>
                <tr class="text-right PaddingTop">
                    <td></td>
                    <td>Balance due&nbsp; </td>
                    <td style="text-align:right;" class="AddBorder"> @Convert.ToDecimal(Model.Invoice.Balance).ToString("N2")&nbsp; </td>
                </tr>
            </tbody>
        </table>
        @if (@Model.Supplier.CompanyRegAddress != "")
        {
            <div class="footer">
                <p class="LineBreak">To : &nbsp;@Model.Supplier.CompanyRegAddress</p>
            </div>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
